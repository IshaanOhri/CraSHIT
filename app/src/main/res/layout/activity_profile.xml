<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Ishaan Ohri"
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="INFO"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="235dp"
                tools:layout_editor_absoluteY="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="61dp"
                tools:layout_editor_absoluteY="319dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/landmark" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/addressTextView"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Room #745, G Block, Men's Hostel, VIT Vellore - 632014"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="61dp"
                tools:layout_editor_absoluteY="319dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/blood" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blood type"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/bloodTextView"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="B+"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:text="CONTACTS"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="235dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/contactOneName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anmol Pant"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/contactOneNumber"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="+91 9868884672"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/contactTwoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raunaq Nijhawan"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/contactTwoNumber"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="+91 8447396195"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="EDIT"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/red"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>